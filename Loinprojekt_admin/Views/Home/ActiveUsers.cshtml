@model IEnumerable<Loinprojekt_admin.LoginService.InterfaceUser>
@{
    ViewBag.Title = "User accounts";
}
<form>
    <br />
    <input type="text" name="search" placeholder="Search..." />
    <input type="submit" name="search" value="Search account" />

</form>
<h2 style="color: red; ">@Html.ValidationMessage("Felmeddelande")</h2>

@if (Model.Count() > 0)
{

    <h2>List of user accounts</h2>
    <div class="table-wrapper-scroll-y my-custom-scrollbar">

        <table style="overflow-y: auto" class="table">

            <tr>

                <th>Username</th>
                <th>Status</th>
                <th>Role</th>
                <th>Go to profile</th>
                <th>Add permissions</th>
                <th>Delete account</th>


            </tr>

            @foreach (var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(m => item.Username)</td>
                <td>@Html.DisplayFor(m => item.Status.StatusName)</td>
                <td>@Html.DisplayFor(m => item.Roles.Role)</td>


                <td>@Html.ActionLink("Go to profile", "ShowProfile", new { id = item.ID })</td>
                <td>@Html.ActionLink("Add permissions", "AddPermission", new { id = item.ID })</td>
                <td>@Html.ActionLink("Delete account", "Delete", new { id = item.ID })</td>
                <td>@Html.ActionLink("Block User", "BlockUser", new { id = item.ID })</td>

            </tr>
            }



        </table>
    </div>
}
else
{
    <h2 style = "color: red"> It seems like there are no users yet </h2>
}
