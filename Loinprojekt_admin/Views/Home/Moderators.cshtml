@model IEnumerable<Loinprojekt_admin.LoginService.InterfaceUser>
@{
    ViewBag.Title = "Moderator accounts";
}
<br />

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

<h2 style="color: red; ">@Html.ValidationMessage("Felmeddelande")</h2>

@if (Model.Count() > 0)
{
    <h2 style="font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif">List of moderator accounts</h2>
    <div class="table-wrapper-scroll-y my-custom-scrollbar">

        <table id="myTable" style="overflow-y: auto" class="table">
            <tr>
                <th class="th">Username</th>
                <th class="th">Status</th>
                <th class="th">Delete permission</th>
                <th class="th">Radera konto</th>


            </tr>
            @foreach (var item in Model)
            {
            <tr>
                <td style="font-weight: bold; font-style:italic">@Html.ActionLink((string)item.Username, "ShowProfile", new { id = item.ID })</td>
                <td>@Html.DisplayFor(m => item.Status.StatusName)</td>
                <td>
                    @Html.ActionLink("Delete permission", "DeletePermission", new { id = item.ID })
                </td>
                <td>
                    @Html.ActionLink("Delete account", "DeleteAccount", new { id = item.ID })
                </td>
            </tr>
            }


        </table>
    </div>
}
else
{
    <h2 style="color: red">It seems like no moderators have been assigned yet</h2>
}

<script>
    function myFunction() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>