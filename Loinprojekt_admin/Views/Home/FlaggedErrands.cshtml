@model IEnumerable<Loinprojekt_admin.LoginService.InterfaceFlaggedUser>
@{
    ViewBag.Title = "Flagged userss";
}
<br />

<input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for names.." title="Type in a name">

<h2 style="color: red; ">@Html.ValidationMessage("Felmeddelande")</h2>
@if (Model.Count() > 0)
{
    <h2>List of flagged users</h2>

    <div class="table-wrapper-scroll-y my-custom-scrollbar">

        <table id="myTable" style="overflow-y: auto" class="table">
            <tr>
                <th class="th">Username</th>
                <th class="th">Reason</th>
                <th class="th">Flagged by</th>
                <th class="th">Block user</th>
                <th class="th">Unflag by</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>

                    <td>@Html.DisplayFor(m => item.WhoIsFlagged.Username)</td>
                    <td>@Html.DisplayFor(m => item.Reason)</td>
                    <td>@Html.DisplayFor(m => item.FlaggedBy.Username)</td>
                    <td>

                        @Html.ActionLink("Go to profile", "ShowProfile", new { id = item.ID })
                        <!-- Kolla med profilgruppen-->
                    </td>
                    <td>
                        @Html.ActionLink("Block user", "BlockUser", "Home", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Unflag", "Unflag", new { id = item.ID })
                    </td>
                    <td>
                        @Html.ActionLink("Delete account", "DeleteAccount", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>
}
else
{
    <h2 style="color: red">It seems like there are no flagged errands yet</h2>
}


<script>
    function myFunction() {
        var input, filter, table, tr, td, i, txtValue;
        input = document.getElementById("myInput");
        filter = input.value.toUpperCase();
        table = document.getElementById("myTable");
        tr = table.getElementsByTagName("tr");
        for (i = 0; i < tr.length; i++) {
            td = tr[i].getElementsByTagName("td")[0];
            if (td) {
                txtValue = td.textContent || td.innerText;
                if (txtValue.toUpperCase().indexOf(filter) > -1) {
                    tr[i].style.display = "";
                } else {
                    tr[i].style.display = "none";
                }
            }
        }
    }
</script>
